  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">New Author</h4>
  </div>
  <div class="row justify-content-center">
<%= form_with(model: @author, local: true) do |f| %>
<div class="form-group">
  <%= f.label :email %>
  <%= f.email_field :email %>
</div>
<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name %>
  </div>

  <div class="form-group">
  <%= f.label :DOB %>
  <%= f.date_field  :DOB %>
</div>
<div class="form-group">
  <%= f.label :phone_number%>
  <%= f.text_field :phone_number %>
</div>

<div class="form-group">
    <%= f.submit class: 'form-control btn-primary' %>
  </div>
<%end%>